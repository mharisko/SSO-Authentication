@model LoginViewModel

@Html.Partial("_ValidationSummary")

<div class="bg-dark">
    <div class="container">
        <div class="card card-login mx-auto mt-5">
            <div class="card-header">Login</div>
            <div class="card-body">
                <form asp-route="Login">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReturnUrl" />
                    <fieldset>
                        <div class="form-group">
                            <label asp-for="Username">Email address</label>
                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Password</label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="form-check">
                                <label asp-for="RememberLogin" class="form-check-label">
                                    <input class="form-check-input" type="checkbox" asp-for="RememberLogin">
                                    <strong>Remember My Login</strong>
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block" name="button" value="login">Login</button>
                            <button class="btn btn-primary btn-block" name="button" value="cancel">Cancel</button>
                        </div>
                    </fieldset>
                </form>
                <div class="text-center">
                    <a class="d-block small" asp-action="ForgotPassword" asp-controller="Manage">Forgot Password?</a>
                </div>
            </div>
        </div>
    </div>
</div>